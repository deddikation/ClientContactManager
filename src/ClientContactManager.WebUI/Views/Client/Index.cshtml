@model List<ClientContactManager.Application.DTOs.ClientListDto>
@{ ViewData["Title"] = "Clients"; }

<div class="breadcrumb-bar">
    <a asp-controller="Home" asp-action="Index">Dashboard</a>
    <span class="sep">/</span>
    <span class="current">Clients</span>
</div>

<div class="page-header">
    <h2>Clients</h2>
    <div class="actions">
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
            New Client
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-panel">
        <div class="empty-state">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
                </svg>
            </div>
            <p>No clients found</p>
            <p class="empty-hint">Create your first client to get started.</p>
        </div>
    </div>
}
else
{
    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Client Code</th>
                    <th class="text-center">Linked Contacts</th>
                    <th style="width:100px"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td class="cell-primary">@client.Name</td>
                    <td><span class="cell-code">@client.ClientCode</span></td>
                    <td class="text-center"><span class="count-badge">@client.LinkedContactCount</span></td>
                    <td class="cell-actions">
                        <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-outline-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                            Edit
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
